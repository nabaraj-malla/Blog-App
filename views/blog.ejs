<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blog</title>
    <style>
      .custom {
        display: flex;
        justify-content: center;
      }

      #author-image {
        border-radius: 50%;
        height: 70px;
        width: 76px;
      }

      #author-name {
        padding-left: 10px;
      }

      #comment-image {
        border-radius: 50%;
        height: 32px;
        width: 32px;
      }
    </style>
  </head>
  <body>
    <%- include("./partials/nav") %>
    <div class="container mt-3">
      <h1 class="custom"><%= blog.title %></h1>
      <span class="custom"
        ><img src="<%= blog.coverImageURL %>" width="300px"
      /></span>
      <!-- <pre class="custom" style="margin-top: 20px"><%= blog.body %></pre> -->
      <p class="d-flex justify-content-center"><%= blog.body %></p>
      <img id="author-image" src="<%= blog.createdBy.profileImageURL%>" />
      <span id="author-name"> <%= blog.createdBy.fullName %> </span>
      <% if (locals.user) { %>
      <div class="container mt-3">
        <form method="post" action="/comment/<%= blog._id %>">
          <div class="mb-3">
            <label for="comment" class="form-label"
              >Comment <%= comments.length %></label
            >
            <input
              type="text"
              name="commentContent"
              class="form-control"
              id="comment"
              placeholder="Give comment"
            />
          </div>
          <button class="btn-primary" type="submit">Add</button>
        </form>
      </div>
      <% } %>
      <div class="container mt-3">
        <% comments.forEach(comment => { %>
        <div>
          <img id="comment-image" src="<%= comment.user.profileImageURL %>" />
          <%= comment.user.fullName %>: <%= comment.commentContent %>
        </div>
        <% }) %>
      </div>
    </div>
    <%-include('./partials/script') %>
  </body>
</html>
